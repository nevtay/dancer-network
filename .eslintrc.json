{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [2, "double"],
    "semi": [2, "always"],
    "space-before-function-paren": 0,
    "react/prop-types": 0,
    "comma-dangle": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
